{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "plugins": ["@nestjs/swagger"],
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
      "assets": [
        {
          "include": "modules/emails/templates/*",
          "outDir": "./dist/src",
          "watchAssets": true
        }
      ]
    }
}
